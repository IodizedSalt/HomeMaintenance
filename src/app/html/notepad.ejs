<a href="/">
    <img src="/app/img/misc/android-chrome-512x512.png" style="max-width: 50px; margin: 2em 0em 0em 2em;" alt="Home" class="home-icon">
</a>


<body onload="getText()">
    <script type="text/javascript" src="/app/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/app/js/functions.js" env_type="<%= env_type %>"></script>
    <div style="margin-top: 3em;">

        <div class="h-100 d-flex align-items-center justify-content-center">
            <h4>Notepad</h4>
        </div>
        <div class="h-100 d-flex align-items-center justify-content-center"
            style="width: 80%; margin: 0 10%; height: 80%;">
            <div id="notepad" style="width: 80%;">
                <!-- TODO: work on onblur event so that it doesnt double save with button click -->
                <textarea style="width: 100%; height: 20em;" id='notepad_text'></textarea>
                <br />
                <buton class="btn btn-primary h-100 d-flex align-items-center justify-content-center"
                    id="saveTextButton" onclick="saveText()">Save</button>
            </div>
        </div>
    </div>
    <div style="display: none;" id="save_success_message"> Saved successfully </div>
    <div style="display: none;" id="save_error_message"> ERROR saving </div>
</body>

</html>